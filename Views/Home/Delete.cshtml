@model MyMvcProject.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="container frame">
    <h1 class="text-center">Delete User</h1>
    <div class="text-center mb-4">
        <small class="text-muted">Are you sure you want to delete this user?</small>
    </div>
    
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Warning</h5>
        </div>
        <div class="card-body">
            <p>You are about to delete the following user:</p>
            
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.UserName</dd>
                
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                
                <dt class="col-sm-3">Mobile</dt>
                <dd class="col-sm-9">@Model.Mobile</dd>
                
                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Roles</dd>
                
                <dt class="col-sm-3">Created On</dt>
                <dd class="col-sm-9">@Model.DateCreated.ToString("yyyy-MM-dd HH:mm")</dd>
                
                @if (Model.DateUpdated.HasValue)
                {
                    <dt class="col-sm-3">Last Updated</dt>
                    <dd class="col-sm-9">@Model.DateUpdated.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                }
            </dl>
            
            <p class="text-danger">This action cannot be undone.</p>
            
            <div class="d-flex justify-content-end">
                <a href="/Home/Users" class="btn btn-secondary me-2">Cancel</a>
                <form method="post" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>