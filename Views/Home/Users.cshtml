@model IEnumerable<MyMvcProject.Models.User>
@{
    ViewData["Title"] = "User View";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="d-flex justify-content-end mb-2">
    <a href="/Home/Add" class="btn btn-success">Add User</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Role</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Mobile</td>
                    <td>@user.Roles</td>
                    <td>@user.DateCreated.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(user.DateUpdated.HasValue ? user.DateUpdated.Value.ToString("yyyy-MM-dd HH:mm") : "-")</td>
                    <td>
                        <a href="/Home/Edit/@user.Id" class="btn btn-primary">Edit</a>
                        <a href="/Home/Delete/@user.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users available.</p>
}