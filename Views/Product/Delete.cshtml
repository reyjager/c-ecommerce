@model MyMvcProject.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <h1 class="mb-4">Delete Product</h1>
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this product?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Product Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product ID</dt>
                <dd class="col-sm-9">@Model.ProductId</dd>
                
                <dt class="col-sm-3">Product Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">SKU Number</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.SkuNumber) ? "Not specified" : Model.SkuNumber)</dd>
                
                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
                
                <dt class="col-sm-3">Stock Quantity</dt>
                <dd class="col-sm-9">@Model.StockQuantity</dd>
                
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </dd>
                
                <dt class="col-sm-3">Created On</dt>
                <dd class="col-sm-9">@Model.DateCreated.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a href="/Product/Index" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>