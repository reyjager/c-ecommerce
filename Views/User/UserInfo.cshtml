@model MyMvcProject.Models.User
@{
    ViewData["Title"] = "User Information";
}

<div class="container frame">
    <h1 class="text-center mb-4">User Information</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@Model.UserName's Profile</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">User ID</dt>
                <dd class="col-sm-9">@Model.UserId</dd>
                
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.UserName</dd>
                
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                
                <dt class="col-sm-3">Mobile</dt>
                <dd class="col-sm-9">@Model.Mobile</dd>
                
                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Roles</dd>
                
                <dt class="col-sm-3">Created On</dt>
                <dd class="col-sm-9">@Model.DateCreated.ToString("yyyy-MM-dd HH:mm")</dd>
                
                @if (Model.DateUpdated.HasValue)
                {
                    <dt class="col-sm-3">Last Updated</dt>
                    <dd class="col-sm-9">@Model.DateUpdated.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                }
            </dl>
            
            <div class="d-flex justify-content-end mt-3">
                <a href="/User/List" class="btn btn-secondary me-2">Back to List</a>
                <a href="/User/Edit/@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>